@model PaginationResponse<SectionDTO>
@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Inicio</a></li>
            <li class="breadcrumb-item active">Secciones</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">

        <div class="card-header">

            <div class="row">
                <h3 class="m-0 font-weight-bold text-primary col-md-11">Secciones</h3>
                <div class="col-md-1">
                    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i></a>
                </div>
            </div>
        </div>

        <div class="card-body mt-3">

            <form asp-action="Index" class="navbar-search" method="GET">

                <input type="hidden" name="Page" value="@Model.CurrentPage" />

                <div class="row mt-3">

                    <div class="col-md-auto">

                        <select name="RecordsPerPage" class="form-select bg-light border-0 small" asp-for="RecordsPerPage">
                            <option value="2" selected="@(Model.RecordsPerPage == 2)">2</option>
                            <option value="10" selected="@(Model.RecordsPerPage == 10)">10</option>
                            <option value="15" selected="@(Model.RecordsPerPage == 15)">15</option>
                            <option value="30" selected="@(Model.RecordsPerPage == 30)">30</option>
                            <option value="50" selected="@(Model.RecordsPerPage == 50)">50</option>
                        </select>

                    </div>

                    <div class="col-md-10">
                        <div class="input-group mb-3">
                            <input type="text"
                                    class="form-control bg-light border-0 small"
                                    placeholder="Buscar..."
                                    aria-label="serach"
                                    asp-for="Filter" />
                            <button class="btn btn-primary"><i class="bi bi-search"></i></button>
                        </div>
                    </div>
                </div>

            </form>

            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Sección</th>
                        <th>Descripción</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>

                    @foreach(SectionDTO item in Model.List)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil-fill"></i></a>

                                @if (item.IsHidden)
                                {
                                    <form asp-action="Toggle" style="display: contents;" method="POST">
                                        <input type="hidden" value="@item.Id" name="SectionId" />
                                        <input type="hidden" value="false" name="Hide" />

                                        <button class="btn btn-sm btn-secondary" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="Desocultar">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Toggle" style="display: contents;" method="POST">
                                        <input type="hidden" value="@item.Id" name="SectionId" />
                                        <input type="hidden" value="true" name="Hide" />

                                        <button class="btn btn-sm btn-info" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-original-title="Ocultar">
                                            <i class="bi bi-eye-slash-fill"></i>
                                        </button>
                                    </form>
                                }

                                <form asp-action="Delete" asp-route-Id="@item.Id" style="display: contents;">
                                    <button class="btn btn-sm btn-danger btnDelete"><i class="bi bi-trash-fill"></i></button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>

            <nav aria-label="">
                <ul class="pagination justify-content-center">

                    @* Primera *@
                    <li class="page-item">
                        <a class="page-link @(Model.CurrentPage == 1 ? "disabled" : "")"
                           asp-route-Page="1"
                           asp-route-RecordsPerPage="@Model.RecordsPerPage"
                           asp-route-Filter="@Model.Filter"
                           asp-action="Index">
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>

                    @* Anterior *@
                    <li class="page-item">
                        <a class="page-link @(!Model.HasPrevious ? "disabled" : "")"
                        asp-route-Page="@(Model.CurrentPage - 1)"
                        asp-route-RecordsPerPage="@Model.RecordsPerPage"
                        asp-route-Filter="@Model.Filter"
                        asp-action="Index">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @* Páginas *@
                    @foreach(int page in Model.Pages)
                    {

                        <li class="page-item">
                            <a class="page-link @(Model.CurrentPage == page ? "disabled" : "")"
                               asp-route-Page="@(page)"
                               asp-route-RecordsPerPage="@Model.RecordsPerPage"
                               asp-route-Filter="@Model.Filter"
                               asp-action="Index">
                                @(page)
                            </a>
                        </li>
                    }

                    @* Siguiente *@
                    <li class="page-item">
                        <a class="page-link @(!Model.HasNext ? "disabled" : "")"
                           asp-route-Page="@(Model.CurrentPage + 1)"
                           asp-route-RecordsPerPage="@Model.RecordsPerPage"
                           asp-route-Filter="@Model.Filter"
                           asp-action="Index">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>

                    @* Última *@
                    <li class="page-item">
                        <a class="page-link @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")"
                           asp-route-Page="@Model.TotalPages"
                           asp-route-RecordsPerPage="@Model.RecordsPerPage"
                           asp-route-Filter="@Model.Filter"
                           asp-action="Index">
                            <i class="bi bi-chevron-double-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>
</section>

@section Scripts{
    <script>

        $(document).ready(function() {

            $('.btnDelete').click(function(event) {
                    
                event.preventDefault();

                Swal.fire({
                  icon: "question",
                  title: "¿Desea eliminar la sección?",
                  text: "No podrá revertirlo",
                  showCancelButton: true
                }).then((result) => {
                        
                    if (result.isConfirmed) {
                        
                        const form = $(this).closest('form');

                        form.submit();
                    }
                });
            });            
        });

    </script>
}